module.exports = [
    wrapRoute(async (req, res) => {
        const { url = null, text = null, sender = null } = req.query || {};

        if (!url || !text || !sender) {
            throw createError(404);
        }

        trackEvent(sender, text, url);

        res.redirect(301, url);
    })
];
