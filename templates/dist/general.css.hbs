{{#if publicStorage}}
h1, h2, h3, h4, h5, strong, b {
    font-family: Rubik,Arial,Helvetica,sans-serif;
}

.has-cs-bg {
    background: white;
}

.navbar-item img {
    max-height: none;
}

nav.navbar {
    height: 80px;
}

.navbar-burger {
    height: 80px;
}

nav.navbar a, nav.navbar a:active, nav.navbar a.is-active, a, a:active {
    color: #666666;
}

.logo {
    width: 118px;
    margin: 10px;
}

div.hero-body {
    padding: 0;
}

.hero-body > .columns {
    flex-grow: 1;
}

.navbar-brand {
    justify-content: space-between;
    flex-grow: 1;
}

.columns.has-iframe, .columns.has-iframe:last-child {
    align-self: stretch;
    margin-top: 0;
    margin-bottom: 0;
}

.columns.has-iframe .column {
    padding-top: 0;
    padding-bottom: 0;
}

.chatcontainer {
    box-shadow: rgba(0, 0, 0, 0.08) 0px 2px 9px 2px;
    border-radius: 4px;
    min-height: 300px;
    min-height: 70vh;
    width: 90%;
    height: 94%;
    max-height: 80vh;
    margin: 3% auto 3% auto;
    overflow: hidden;
    position: relative;
    background: #ffffff;
}

iframe.chat {
    width: 100%;
    height: 100%;;
}

.framewrap {
    position: absolute;
    bottom: 0;
    top: 0;
    width: 100%;
}

.top-frame {
    color: #ffffff;
    padding: 4em 2em;
    font-size: 1.1em;
    position: relative;
}

.text-frame {
    padding: 3em 2em;
    color: rgb(68, 92, 117);
    background: rgba(255,255,255,0.35);
}

h1, h2, .content h1, .content h2 {
    color: #444444;
}

.top-frame .bg {
    background-color: #1fffb4;
    position: absolute;
    z-index: -1;
    top: 0;
    bottom: 0;
    left: 0;
    width: 100vw;
}

.content h1, .content h2 {
    font-weight: 300;
}

.top-frame .content, .top-frame h1 {
    color: #444444;
}

.wc-message-pane.show-actions .wc-message-groups {
    top: 0;
}

.wc-header {
    display: none;
}

@media screen and (min-width: 1088px) {

    .top-frame .content, .text-frame .content {
        margin-left: 10%;
    }
    .chatcontainer {
        margin-right: 10%;
        width: 85%;
    }

}
